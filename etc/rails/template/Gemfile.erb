source 'https://rubygems.org'
source 'https://rails-assets.org'
ruby '<%= latest_ruby_version %>'

gem 'rails', '~> 4.1'
gem 'pg'
gem 'active_model_serializers'
gem 'puma'
gem 'activejob'
gem 'activemodel-globalid', github: 'rails/activemodel-globalid'

gem 'sass-rails'
gem 'sprockets', '<= 2.11.12'
gem 'coffee-rails'
gem 'foundation-rails'
gem 'uglifier',         '~> 1.3'
gem 'jquery-rails'
gem 'autoprefixer-rails'

group :development do
  gem 'meta_request'
  gem 'quiet_assets'
end

group :development, :test do
  gem 'pry-rails'
  gem 'pry-byebug'
end

group :test do
  gem 'rspec-rails'
end

group :production do
  gem 'rack-cache'
  gem 'redis-rails'
  gem 'asset_sync'
end
