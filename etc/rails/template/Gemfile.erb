source 'https://rubygems.org'
ruby '<%= latest_ruby_version %>'

gem 'rails', '~> 4.0'
gem 'pg'
gem 'active_model_serializers'
gem 'puma'
gem 'activejob'
gem 'activemodel-globalid', github: 'rails/activemodel-globalid'

gem 'sass-rails'
gem 'sprockets', '<= 2.11.12'
gem 'coffee-rails'
gem 'foundation-rails'
gem 'uglifier',         '~> 1.3'

gem 'jquery-rails',     '2.2.2'
gem 'ember-rails'
gem 'emblem-rails'
gem 'ember_script-rails'

group :development do
  gem 'meta_request'
end

group :development, :test do
  gem 'pry-rails'
  gem 'pry-byebug'
end

group :test do
  gem 'rspec-rails'
end

group :production do
  gem 'rack-cache'
end
