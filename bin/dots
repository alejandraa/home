#!/usr/bin/env ruby
#
#    dots - A shell framework for ZSH
#
# == Usage
#
# Master control for the dots framework shell commands.

command = ARGV.first

if command.nil?
  `dots-help`
  welcome = %(
  DOTS | http://tubbo.github.com/dots
  -----------------------------------
  )

  help = %(
  Usage:

    dots update - Update the ~/.dots directory and Antigen
  )

  puts "#{welcome}\n#{help}"
else
  arguments = ARGV.reject { |arg| arg =~ /#{command}|dots/o }.join ' '
  `dots-#{command} #{arguments}`
end
