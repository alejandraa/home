let g:ctrlp_user_command = {
\ 'types': {
    \ 1: ['.git/', 'cd %s && git ls-files']
\ },
\ 'fallback': 'find %s -type f | head -' . g:ctrlp_max_files
\ }
let g:ctrlp_clear_cache_on_exit = 0
let g:ctrlp_custom_ignore = {
  \ 'dir': '\v[\/](\.(git|hg|svn|)|vendor/(gems|cookbooks))$'
  \ }


